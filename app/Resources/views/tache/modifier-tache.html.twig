{% extends 'base.html.twig' %}

{% set conf_modifier_tache_vue =
    {
        'activation_edit_form_modifier_tache':true,
    }
%}

{% if conf_modifier_tache_vue.activation_edit_form_modifier_tache and reponse.resultat != '{}' and  reponse.message == 'success'%}
    {% form_theme reponse.edit_form 'bootstrap_3_horizontal_layout.html.twig' %}
{% endif %}

{% block body %}

    <div class="container">
    
        <h1 class="h1-app">Modifier ma tâche</h1>
        
        {% if reponse.resultat != '{}' and  reponse.message == 'success' %}
            <div id="form-request">


            {% if conf_modifier_tache_vue.activation_edit_form_modifier_tache %}
           
                
                    {{ form_start(reponse.edit_form) }}

                    <div class="flex-container-nouvelle-tache">
                        <div class="nouvelle-tache-input-label data-style-label">
                            Nom de la tâche
                        </div>
                        <div class="nouvelle-tache-input">
                            {{ form_widget(reponse.edit_form.nom, {'attr': {'class': 'nouvelle-tache-input-border', 'autocomplete':'off'} }) }}
                        </div>
                        <div class="nouvelle-tache-input-error">
                            {{ form_errors(reponse.edit_form.nom) }}
                        </div>
                    </div>
                    
                    <div class="flex-container-nouvelle-tache">
                        <div class="nouvelle-tache-input-label data-style-label">
                            Statut de la tâche
                        </div>
                        <div class="nouvelle-tache-input">
                            {{ form_widget(reponse.edit_form.statut, {'attr': {'class': 'nouvelle-tache-input-border', 'autocomplete':'off'} }) }}
                        </div>
                        <div class="nouvelle-tache-input-error">
                            {{ form_errors(reponse.edit_form.statut) }}
                        </div>
                    </div>

                    <div class="flex-container-nouvelle-tache">
                        <div class="nouvelle-tache-input-label data-style-label">
                            Description de la tâche
                        </div>
                        <div class="nouvelle-tache-input">
                            {{ form_widget(reponse.edit_form.description, {'attr': {'class': 'nouvelle-tache-input-border', 'autocomplete':'off'} }) }}
                        </div>
                        <div class="nouvelle-tache-input-error">
                            {{ form_errors(reponse.edit_form.description) }}
                        </div>
                    </div>

                    <div class="flex-container-nouvelle-tache">
                        <div class="nouvelle-tache-input-label data-style-label">
                            Objectif de la tâche
                        </div>
                        <div class="nouvelle-tache-input">
                            {{ form_widget(reponse.edit_form.objectif, {'attr': {'class': 'nouvelle-tache-input-border', 'autocomplete':'off'} }) }}
                        </div>
                        <div class="nouvelle-tache-input-error">
                            {{ form_errors(reponse.edit_form.objectif) }}
                        </div>
                    </div>

                    <div class="flex-container-nouvelle-tache">
                        <div class="nouvelle-tache-input-label data-style-label">
                            Remarque de la tâche
                        </div>
                        <div class="nouvelle-tache-input">
                            {{ form_widget(reponse.edit_form.remarque, {'attr': {'class': 'nouvelle-tache-input-border', 'autocomplete':'off'} }) }}
                        </div>
                        <div class="nouvelle-tache-input-error">
                            {{ form_errors(reponse.edit_form.remarque) }}
                        </div>
                    </div>    

                    <div class="nouvelle-tache-input-flex-container-action">
                        <div class="nouvelle-tache-input-item-flex nouvelle-tache-input-auto">
                            <input class="successButton a-button a-action-modifier" type="submit" value="Modifier" />
                            <a class='grayButton a-button a-action-modifier' href="{{ path('consulter_tache', {'id':reponse.resultat.id} ) }}">Retour</a>
                            <a class='infoButton a-button a-action-modifier' href="{{ path('consulter_liste_taches') }}">Liste des tâches</a>
                        </div>
                    </div>

                    {{ form_end(reponse.edit_form) }}
           
            {% endif %}

            <div>
        {% else %}
            <p><strong>La tâche demandée n'existe pas.</strong> Veuillez repartir à la liste des tâches.</p>
            <div>
                <ul class="ul-button">
                    <li class="li-button">
                        <a class='infoButton a-button' href="{{ path('consulter_liste_taches') }}">Liste des tâches</a>
                    </li>
                </ul>
            <div>
        {% endif %}

    </div>
{% endblock %}